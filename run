#!/bin/sh
# -*- mode:Shell -*-

c=$1

echo testing $c

passed=0
i=1
while [ -f input$i ]
do
    echo -n test $i "..."
    $c < input$i > actual$i
    diff -w actual$i expected$i
    if [ $? -eq 0 ];then
	echo " passed."
    else
	echo " failed."
	exit 1
    fi
    i=`expr $i \+ 1`
    passed=`expr $passed \+ 1`
done

echo ----------------
echo Passed $passed tests.
echo ----------------

